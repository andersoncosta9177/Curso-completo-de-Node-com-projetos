<h1>Aditando: {{this.name}}</h1>

<form action="/users/update" class="form" method="post">
  <input type="hidden" name="id" id="" value="{{user.id}}" />
  <div class="form-control">
    <label for="name">Nome:</label>
    <input type="text" name="name" id="" value="{{user.name}}" />

  </div>

  <div class="form-control">
    <label for="occupation">Profissão:</label>
    <input type="text" name="occupation" id="" value="{{user.occupation}}" />
  </div>

  <div class="form-control form-check-box">
    {{#if user.newsletter}}
      <input type="checkbox" name="newsletter" id="" checked />
    {{else}}
      <input type="checkbox" name="newsletter" id="" />
    {{/if}}
    <label for="">Enviar promoções?:</label>

  </div>
  <input type="submit" value="Editar" name="" id="" />
</form>

<div class="adress-container">
  <h2>Endereços:</h2>
  <form action="/address/create" method="post">
    <input type="hidden" name="UserId" value="{{user.id}}" id="" />
    <div class="form-control">
      <label for="">Rua:</label>
      <input type="text" name="street" placeholder="Digite a rua" id="" />
    </div>

    <div class="form-control">
      <label for="">Numero:</label>
      <input type="text" name="number" placeholder="Digite o numero" id="" />
    </div>

    <div class="form-control">
      <label for="">Cidade:</label>
      <input type="text" name="city" placeholder="Digite a cidade" id="" />
    </div>
    <input type="submit" value="Incluir endereço" name="" id="" />

  </form>

  <div class="address-list">
    <h2>Lista de endereços</h2>

    {{#each user.adresses }}
             <p>#{{this.id}} - {{this.street}} -  {{this.number}} - {{this.city}}</p>
    {{/each}}

  </div>

</div>